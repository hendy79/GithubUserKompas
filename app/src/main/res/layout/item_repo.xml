<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_repo_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:id="@+id/item_repo_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/item_repo_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="10dp"
        />

    <ImageView
        android:id="@+id/item_repo_star_icon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_figma_star"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_repo_desc"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="10dp"
        />

    <TextView
        android:id="@+id/item_repo_star"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/item_repo_star_icon"
        app:layout_constraintTop_toTopOf="@id/item_repo_star_icon"
        app:layout_constraintBottom_toBottomOf="@id/item_repo_star_icon"
        android:layout_marginStart="5dp"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@+id/item_repo_updated"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@id/item_repo_star"
        app:layout_constraintTop_toTopOf="@id/item_repo_star_icon"
        app:layout_constraintBottom_toBottomOf="@id/item_repo_star_icon"
        android:layout_marginStart="10dp"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>